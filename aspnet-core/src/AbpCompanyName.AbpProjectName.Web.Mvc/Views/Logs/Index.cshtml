@using AbpCompanyName.AbpProjectName.Web.Startup
@model AbpCompanyName.AbpProjectName.Web.Models.Roles.RoleListViewModel
@{ ViewBag.Title = L("Logs");
    ViewBag.CurrentPageName = PageNames.Logs; }
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Logs/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Logs/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Logs")</h1>
            </div>
            <div class="col-sm-6">

            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Logs/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="LogsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Date")</th>
                                        <th>@L("Level")</th>
                                        <th>@L("Logger")</th>
                                        <th>@L("Message")</th>
                                        <th>@L("Exception")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
